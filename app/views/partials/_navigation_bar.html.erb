<% if current_user %>
    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <%= link_to @page_title, @home_url, class: "navbar-brand" %>
            </div>
            <div id="navbar" class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>
                        <a href="<%= @profile_url %>">
                            My Profile
                        </a>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Groups<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="#">Group 1</a></li>
                            <li><a href="#">Group 2</a></li>
                            <li><a href="#">Group 3</a></li>
                        </ul>
                    </li>
                    <li><%= link_to 'Students', student_path %></li>
                    <li><%= link_to 'Mentors', mentor_path %></li>
                    <% if current_user && current_user.admin? %>
                        <li><a data-toggle="modal" href="#addStudent" class="">Add a Student</a></li>
                        <li><a data-toggle="modal" href="#addMentor" class="">Add a Mentor</a></li>
                        
                    <% end %>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                  <li><a href="/users/sign_out">Log Out</a></li>
                </ul>
            </div><!--/.nav-collapse -->
        </div><!--/.container-fluid -->
    </nav>
<% end %>

<!-- Student Modal -->
<div class="modal fade" id="addStudent" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <%= render 'partials/create_student' %>
</div><!-- /.modal -->

<!-- Mentor Modal -->
<div class="modal fade" id="addMentor" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <%= render 'partials/create_mentor' %>
</div><!-- /.modal -->
