<% if current_user %>
    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <%= link_to @page_title, @home_url, class: "navbar-brand" %>
            </div>
            <div id="navbar" class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <% if !current_page?(action: 'new') %>
                        <% if !current_user.admin? %>
                            <li>
                                <a href="<%= @profile_url %>">
                                    My Profile
                                </a>
                            </li>
                        <% end %>
                      <li><%= link_to 'Students', students_path %></li>
                      <li><%= link_to 'Mentors', mentors_path %></li>
                    <% end %>
                    <% if current_user && current_user.admin? %>
                        <li><a data-toggle="modal" href="#addUser" class="">Add a User</a></li>
                    <% end %>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                  <li><a href="/users/sign_out">Log Out</a></li>
                </ul>
            </div><!--/.nav-collapse -->
        </div><!--/.container-fluid -->
    </nav>
    <div class="col-md-12">
        <% if @groups.present? %>
            <% @groups.each do |group| %>
                <span class="label label-primary"><%= link_to group.name, "/groups/#{group.name.downcase}" %></span> 
            <% end %>
        <% else %>
            No groups have been created
        <% end %>
    </div>
    <br />
<% end %>
<!-- Student Modal -->
<div class="modal fade" id="addUser" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <%= render 'partials/add_user' %>
</div><!-- /.modal -->

<!-- Mentor Modal -->
<div class="modal fade" id="addMentor" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <%= render 'partials/create_mentor' %>
</div><!-- /.modal -->
