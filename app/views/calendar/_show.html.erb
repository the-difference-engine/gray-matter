<div class="row">
    <div class="col-md-12 text-center">
        <div class="month-arrow controls">
            <%= link_to authenticated_root_path(date: @date - 1.month), class: "btn btn-default" do %>
                <i class="glyphicon glyphicon-backward"></i>
            <% end %>
            <%= "#{@date.strftime("%B")} #{@date.year}" %>
            <%= link_to authenticated_root_path(date: @date + 1.month), class: "btn btn-default" do %>
                <i class="glyphicon glyphicon-forward"></i>
            <% end %>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <%= calendar( @date ) do |date| %>
            <%= date.day %>
            <% if @events_by_date[date.in_time_zone] %>
                <%= link_to 'Event', events_path(the_date: date, events:  @events_by_date[date.in_time_zone]) %>
            <% end %>
        <% end %>
    </div>
</div>
