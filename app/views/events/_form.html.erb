<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <h4 class="modal-title">Edit a Event</h4>
    </div>
    <%= form_for(@event) do |f| %>
    <div class="modal-body">
        <% if @event.errors.any? %>
            <div id="error_explanation">
            <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

            <ul>
            <% @event.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
            </ul>
            </div>
        <% end %>

        <div class="field">
            <%= f.label :title %><br>
            <%= f.text_field :title %>
        </div>
        <div class="field">
            <%= f.label :description %><br>
            <%= f.text_area :description, cols: '40' %>
        </div>
        <div class="field">
            <%= f.label :start_time %><br>
            <%= f.datetime_select :start_time, {ampm: true}  %>
        </div>
        <div class="field">
            <%= f.label :end_time %><br>
            <%= f.datetime_select :end_time, {ampm: true} %>
        </div>
        <div class="field">
            <%= f.label :all_day %><br>
            <%= f.check_box :all_day %>
        </div>
    </div>
        <div class="modal-footer">
            <%= link_to 'Back', admins_path, class: 'btn btn-default' %>
            <%= f.submit 'Edit Event', class: 'btn btn-primary pull-right' %>
        </div>
    <% end %>
  </div>
</div>
