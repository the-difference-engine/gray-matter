<h4>Add an admin:</h4>

<%= form_tag "/admins", method: :post do %>
  <div>
    <%= label_tag :first_name %>
      <%= text_field_tag :first_name %>
  </div>

  <div>
    <%= label_tag :last_name %>
      <%= text_field_tag :last_name %>
  </div>

  <div>
    <%= label_tag :phone_number %>
      <%= text_field_tag :phone_number %>
  </div>

  <div>
    <%= label_tag :contact_email %>
      <%= text_field_tag :contact_email %>
  </div>
  <div>
    <%= submit_tag "Add User" %>
  </div>
<% end %>
