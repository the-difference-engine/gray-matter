<div class="container">
<h1>Mentor Name</h1>


</div>
<div class="container">
<h2>Admin:</h2>
<% if @mentors %>
 <% @mentors.each do |mentor| %>
   <ol>
      first_name: <i><%= mentor.first_name %></i> | 
       last_name: <i><%= mentor.last_name %></i> | 
       phone number: <i><%= mentor.phone_number %></i>
       <%= link_to "Remove this mentor", "/mentors/#{mentor.id}", method: :delete %>
     </h4>
   </ol>
 <% end %>
<% else %>
 <h3>There are no current mentors</h3>
<% end %>

<h4>Add a Mentor:</h4>

<%= form_tag "/mentors", method: :post do %>
 <div>
   <%= label_tag :first_name %> 
   <%= text_field_tag :first_name %>
 </div>
 
 <div>
   <%= label_tag :last_name %> 
   <%= text_field_tag :last_name %>
 </div>

 <div>
   <%= label_tag :phone_number %> 
   <%= text_field_tag :phone_number %>
 </div>

<div>
   <%= label_tag :contact_email %> 
   <%= text_field_tag :contact_email %>
 </div>
 <div>
   <%= submit_tag "Add Mentor" %>
 </div>
<% end %>


 