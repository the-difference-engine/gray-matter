<div class="container margin-top">
    
            <h1 class="announcements-title">Messaging Board</h1>
            <hr/>
            <div class="row">
              <div class="col-sm-6 col-sm-offset-3">
                <% if @notes.present? %>
                <% @notes.each do |note| %>
                <div class="panel panel-default panel-size">
                    <div class="panel-heading message-head-title">
                        <div class="row">
                            <div class="col-sm-6">
                                <a href="mailto:<%= note.student.contact_email %>" target="_top"><%= note.student.contact_email %></a>
                                
                            </div>
                            <div class="col-sm-4">
                              posted by: <%= note.student.name %>
                            </div>
                            <div class="col-sm-1">
                              <% if current_user.student? && note.student_id == @current_student.id %>
                                <%= link_to ("<i class='fa fa-times-circle' aria-hidden='true'></i>").html_safe, "/notes/#{note.id}", method: :delete, data: { confirm: 'Are you sure you want to delete this message?' } %>
                              <% end %>
                            </div>
                            <div class="col-sm-1">
                              <% if current_user.student? && note.student_id == @current_student.id %>
                                <%= link_to ("<i class='fa fa-pencil-square-o'></i>").html_safe, edit_note_path(note) %>
                              <% end %>
                            </div>
                        </div>
                    </div>
                    <div class="panel-body">
                    <%= note.note %>
                    </div><!-- end of the panel body -->
                </div>
                <% end %>
              </div>
            </div>
            <% else %>
            No messages yet
            <% end %>
    <% if current_user.student? %>
      <%= render 'new' %>
    <% end %>

</div>
