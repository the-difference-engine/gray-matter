<div class="container margin-top">
    
            <h1 class="announcements-title">Messaging Board</h1>
            <hr/>
            <div class="row">
              <div class="col-sm-6 col-sm-offset-3">
                <% @notes.each do |note| %>
                <div class="panel panel-default panel-size">
                    <div class="panel-heading message-head-title">
                        <div class="row">
                            <div class="col-sm-6">

                              <%#= binding.pry %>
                              Poster's email address
                              <%#= current_user.email %>
                            </div>
                            <div class="col-sm-4">
                              by: Poster's name 
                            </div>

                            <div class="col-sm-1">
                                
                              <% if note.student_id == @current_student.id %>
                                <%= link_to ("<i class='fa fa-times-circle' aria-hidden='true'></i>").html_safe, "/notes/#{note.id}", method: :destroy, data: { confirm: 'Are you sure you want to delete this message?' } %>
                              <% end %>
                            </div>
                            <div class="col-sm-1">
                              <% if note.student_id == @current_student.id %>
                                <%= link_to ("<i class='fa fa-pencil-square-o'></i>").html_safe, edit_note_path(note) %>
                              <% end %>
                            </div>
                        </div>
                    </div>
                    <div class="panel-body">
                    <%= note.note %>
                    </div><!-- end of the panel body -->
                </div>
                <% end %>
              </div>
            </div>

<%= render 'new' %>

</div>
