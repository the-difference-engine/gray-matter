<div>
    <div class="panel panel-default" style="width: 25%; text-align: center; margin: 0 auto">
        <div class="panel-heading"><h3>Forgot your password?</h3></div>
        <div class="panel-body">
            <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
            <%= devise_error_messages! %>

            <div class="field">
                <%= f.label :email %><br />
                <%= f.email_field :email, autofocus: true %>
            </div>
            <br/>
            <div class="actions">
                <%= f.submit "Send me reset password instructions", class: 'btn btn-md btn-primary' %>
            </div>
            <% end %>
            <br/>
            <%= render "devise/shared/links" %>

        </div>
    </div>
</div>
