<div class="container content-container">
    <div class="row">
        <div class="col-md-8 announcements-container">
            <h1 class="announcements-title">Announcements</h1>
            <div class="row">
                    <% @announcements.each do |announcement| %>
                    <div class="col-md-6 announcement">
                        <div class="panel panel-default">
                            <div class="panel-heading announcements-head <%= @header_styles.sample %>"><i class="fa fa-bullhorn"></i>&nbsp;&nbsp;&nbsp;<span class="announcements-head-title"><%= announcement.title %></span></div>
                            <div class="panel-body">
                                <%= announcement.body %>
                            </div>
                            <div class="panel-footer announcements-footer">
                                <div class="row">
                                    <div class="col-sm-6">
                                        by: <%= announcement.user.admins[0].nil? ? "N/A" : announcement.user.admins[0].name %>
                                    </div>
                                    <div class="col-sm-6 pull-right">
                                      <%= announcement.created_at.to_time.strftime('%m/%d/%Y at %l:%M %p') %>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                    <% end %>
            </div>
        </div>
        <div class="col-md-4">
            <h1 class="calendar-title">Calendar</h1>
            <%= render calendar_show_path %>
            <h1 class="announcements-title">Resources</h1>
            <% @resources.each do |resource| %>
              <div class="panel panel-default">
                <a href="<%= resource.link %>" target="_blank">
                  <div class="panel-heading resource-head-title">
                    <%= image_tag("download.png", :alt => "Resource Icon", :class => "resource-image") %><%= resource.title %>
                  </div>
                </a>
                <div class="panel-body">
                    <%= resource.description %>
                    <% if resource.documents.present? %>
                        <% resource.documents.each do |document| %>
                            <ul>
                                <li>
                                <a href="<%= document.file_array.url %>" target="_blank">Document</a>
                                </li>
                            </ul>
                        <% end %>
                    <% end %>
                    <hr/>
                    <% if resource.links.present? %>
                        <% resource.links.each do |link| %>
                            <ul>
                                <li>
                                   <a href="<%= link %>" target="_blank">Link</a>
                                </li>
                            </ul>
                        <% end %>
                    <% end %>
                </div><!-- end of the panel body -->

              </div>
            <% end %>
        </div>
    </div>
</div>


